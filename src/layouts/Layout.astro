---
// Supports weights 400-800
import "@fontsource-variable/eb-garamond";
import "@fontsource/geist-sans";
import "@fontsource/geist-mono";
// Supports weights 400-700
import "@fontsource-variable/caveat";
import "@styles/tailwind.css";
import Background from "@components/Background.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Freelance from "@/components/Freelance.astro";
import { SEO } from "astro-seo";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title="Gareth le Grange - Senior Frontend Developer"
      description="Experienced frontend developer with 10+ years of expertise in crafting user-centric, high-performing websites and applications. Currently at Mercedes-Benz, innovating user-friendly features from Muizenberg, South Africa."
      openGraph={{
        basic: {
          title: "Gareth le Grange - Senior Frontend Developer",
          type: "profile",
          image:
            "https://avatars.githubusercontent.com/u/12164551?v=4",
        },
      }}
      extend={{
        link: [{ rel: "icon", href: "/favicon.ico" }],
      }}
    />
  </head>
  <body class="font-sans antialiased relative">
    <Background />
    <div class="flex flex-col min-h-dvh">
      <Header />
      <main class="grow container mx-auto max-w-4xl p-4">
        <slot />
      </main>
      <Freelance />
      <Footer />
    </div>
  </body>
</html>

<style>
  @view-transition {
    navigation: auto;
  }
</style>
