import Layout from "@layouts/Layout.astro";
---

<Layout>
  <article class="prose prose-neutral prose-a:no-underline mt-4 max-w-none">
    <p
      class="font-serif text-[clamp(1.2rem,3.2vw,3em)] leading-[clamp(2.4rem,5vw,5em)] text-pretty font-[400]"
    >
