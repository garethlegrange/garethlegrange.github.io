	</section>
	<section class="mb-8">
		<h5 class="text-lg font-semibold mb-3">Work</h5>
		<ul class="flex flex-col gap-2">
			{workEntries.reverse().map(entry => (
			  <li>
				<h6 class="text-sm font-semibold">{entry.data.company}</h6>
				<div class="flex justify-between text-xs">
					<p class="font-mono">{entry.data.title}</p>
					<p>{entry.data.startDate.toLocaleString('default', { month: 'short', year: 'numeric' })} - {entry.data.isCurrent ? <strong class="uppercase">Present</strong> : entry.data.endDate.toLocaleString('default', { month: 'short', year: 'numeric' })}</p>
